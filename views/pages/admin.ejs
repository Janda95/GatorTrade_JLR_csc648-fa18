<br />
<div class="container-fluid">
  <h1>Admin Dashboard</h1>
</div>
<div class="table table-striped">
  <table class="table" >
    <thead>
      <tr>
        <th><h2>Image</h2></th>
        <th><h2>Title</h2></th>
        <th><h2>Description</h2></th>
        <th><h2>Price</h2></th>
        <th><h2>Location</h2></th>
        <th><h2>Approve</h2></th>
        <th><h2>Deny</h2></th>
      </tr>
    </thead>
    <tbody>
      <% if (typeof items != "undefined") { %>
        <% items.forEach(( item ) => { %>
          <tr>
            <td><img src="<%= item.image_link %>" class="img-thumbnail" alt="Cinque Terre" width="250" height="300"></td>
            <td><%= item.title %></td>
            <td><%= item.description %></td>
            <td>$<%= item.price %></td>
            <td><%= item.meeting_place %></td>
            <td>
              <form class="form-horizontal" action="/approve_item/<%= item.item_id %>">
                  <div class="form-group">
                      <button type="submit" class="btn btn-success">Approve</button>
                  </div>
              </form>
            </td>
            <td>
              <form class="form-horizontal" action="/deny_item/<%= item.item_id %>">
                  <div class="form-group">
                      <button type="submit" class="btn btn-danger">Deny</button>
                  </div>
              </form>
            </td>
          </tr>
        <% }); %>
      <% } %>
    </tbody>
  </table>
</div>