<br>
<div class="container">
  <h2>Admin Dashboard</h2>
  <br>
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" data-toggle="tab" href="#home">Pending Items</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#menu1">User Data</a>
    </li>
  </ul>

  <!-- Tab panes -->
  <!-- Pending Items Tab -->
  <div class="tab-content">
    <div id="home" class="container tab-pane active"><br>
      <h3>Items awaiting for approval</h3>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Image</th>
              <th>Title</th>
              <th>Description</th>
              <th>Price</th>
              <th>Location</th>
              <th>Approve</th>
              <th>Deny</th>
              <th>Status</th>
            </tr>
          </thead>

          <tbody>
            <% if (typeof items != "undefined") { %>
              <% items.forEach(( item ) => { %>
                <tr>
                  <td><img src="<%= item.image_link %>" class="img-thumbnail" alt="Cinque Terre" width="250" height="300"></td>
                  <td><%= item.title %></td>
                  <td><%= item.description %></td>
                  <td>$<%= item.price %></td>
                  <td><%= item.meeting_place %></td>
                  <td>
                    <form class="form-horizontal" action="/admin/approve" method="post">
                        <div class="form-group">
                            <button type="submit" formmethod="post" name="item_id" value="<%= item.item_id %>" class="btn btn-success">Approve</button>
                        </div>
                    </form>
                  </td>
                  <td>
                    <form class="form-horizontal" action="/admin/deny" method="post">
                        <div class="form-group">
                            <button type="submit" formmethod="post" name="item_id" value="<%= item.item_id %>" class="btn btn-danger">Deny</button>
                        </div>
                    </form>
                  </td>
                  <td><%= item.status %></td>
                </tr>
              <% }); %>
            <% } %>
          </tbody>     
        </table>
      </div>
    </div>

    <!-- User Data Tab -->
    <div id="menu1" class="container tab-pane fade"><br>
      <h3>User approval</h3>
        <div class="container">
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Image</th>
                  <th>Title</th>
                  <th>Description</th>
                  <th>Price</th>
                  <th>Location</th>
                  <th>Remove User</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
                    <!-- clickable images -->
                    <a href="" class="btn">
                      <img src="https://res.cloudinary.com/hx8ztvtac/image/upload/v1539125830/samples/ecommerce/leather-bag-gray.jpg"
                          class="img-thumbnail" alt="Cinque Terre" width="250" height="300">
                    </a>
                  </td>
                  <td>Anna</td>
                  <td>Pitt</td>
                  <td>$35</td>
                  <td>New York</td>
                  <td>
                    <form class="form-horizontal" action="/action_page.php">
                        <div class="form-group">
                          <button type="deny" class="btn btn-danger">Remove</button>
                        </div>
                    </form>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>