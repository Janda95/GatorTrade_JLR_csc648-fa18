<div class="container">
  <div class="row">
    <div class="col-xl-8 offset-xl-2">
      <br>
      <h1>Post Item For Sale</h1>
      <% include ../error.ejs %>
      <hr>
            
      <form class="form-signin form-group" method="POST" action="/create" enctype="multipart/form-data">
        <div class="controls">
          <div class="row">
            <div class="col-lg-12">
              <div class="form-group">
                <label for="form_title">Title*</label>
                <input id="form_title" type="text" name="title" class="form-control" placeholder="Please Enter Title Of Post" required="required"
                    data-error="A post title is required." max-length="40" pattern="^[A-Za-z0-9 ]*$" title="Alphanumeric Characters Only">
                <div class="help-block with-errors"></div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <div class="form-group">
                <label for="form_description">Decription *</label>
                <input id="form_description" type="text" name="description" class="form-control" placeholder="Describe the item in 100 characters or less" required="required"
                    data-error="An item description is required." max-length="100" pattern="^[A-Za-z0-9 ]*$" title="Alphanumeric Characters Only">
                <div class="help-block with-errors"></div>
              </div>
            </div>
          </div>

          <div class="row">
            <!-- Category Pulldown -->
            <div class="col-lg-6">
              <label for="form_description">Select Item Category *</label>
              <select class="form-control input-group-append col-lg-12" name="category" id="category">
                <option id="Apparel"        value="Apparel">Apparel</option>
                <option id="Books"          value="Books">Books</option>
                <option id="Electronics"    value="Electronics">Electronics</option>
                <option id="Events"         value="Events">Events</option>
                <option id="Home Goods"     value="Home Goods">Home Goods</option>
                <option id="Services"       value="Services">Services</option>
              </select>
            </div>

            <!-- Meeting Place Pulldown -->
            <div class="col-lg-6">
              <label for="form_description">Select Meeting Place *</label>
              <select class="form-control input-group-append col-lg-12" name="meeting_place" id="category">
                <option id="Cesar Chavez Student Center" value="Cesar Chavez Student Center">Cesar Chavez Student Center</option>
                <option id="J. Paul Leonard Library - Peets Coffee" value="J. Paul Leonard Library - Peets Coffee">J. Paul Leonard Library - Peets Coffee</option>
                <option id="J. Paul Leonard Library - Research Commons" value="J. Paul Leonard Library - Research Commons">J. Paul Leonard Library - Research Commons</option>
                <option id="Student Services Building"    value="Student Services Building">Student Services Building</option>
                <option id="Mashouf Wellness Center"         value="Mashouf Wellness Center">Mashouf Wellness Center</option>
              </select>
            </div>
          </div>

          <div class="row">
            <!-- Item Picture-->
            <div class="col-lg-6">
              <div class="form-group">
                <label for="form_price">Price *</label>
                <input id="form_price" type="text" name="price" class="form-control" placeholder="Item Price (do not use $)" required="required"
                        data-error="An item price is required." max-length="40">
                <div class="help-block with-errors"></div>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="form-group">
                <label for="form_upload_profile_picture">Upload Profile Picture *</label>
                <br>
                <input type="file" id="image" name="image" accept="image/*" required>
              </div>
            </div>
          </div>
          <div class="row">
            <!--Captcha-->
            <div class="col-lg-12">
              <div class="g-recaptcha" data-sitekey="6LfKURIUAAAAAO50vlwWZkyK_G2ywqE52NU7YO0S" data-callback="verifyRecaptchaCallback" data-expired-callback="expiredRecaptchaCallback"></div>
              <input class="d-none" data-recaptcha="true" data-error="Please complete the Captcha">
              <div class="help-block with-errors"></div>
            </div>
            
            <!--Agree to Terms onchange="document.getElementById('create_account').disabled = !this.checked;"-->     
            <div class="col-lg-12">
              <input type="checkbox" onchange="document.getElementById('create_account').disabled = !this.checked;"
                  name="checkbox" value="check" id="agree"/> I have read and agree to the Terms and Conditions and Privacy Policy
            </div>
          </div>
        </div>
        <!--Submit SignUp Form-->    
        <div class="row">
          <div class="col-lg-12">
            <button class="btn btn-lg btn-primary" type="submit" id="create_account" disabled>Post Item For Sale</button>
            <div class="float-right">
              <a href="/search" class="btn btn-lg btn-danger" role="button">Cancel Post</a>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src='https://www.google.com/recaptcha/api.js'></script>