<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">Under Construction!</h1>
    <p> Placeholder: <%=item.title%></p>
  </div>
</div>

<!--Show Product detail-->
<% if (typeof item != "undefined") { %>
  <div class="flex-container">
    <div class="row">
      <div class = "col-md-4 item-photo">
        <img src="<%= item.image_link %>" alt="Item's Image" height="250px" width = "325px" class="img-responsive">
      </div>
      
      <div class = "col-md-8 item-detail" >
        <h2 class="item-title"><strong><%= item.title %></strong></h2>
        <h5 class="item-location" style="color:rgb(12, 175, 204)"><i class="fas fa-map-marker-alt"></i> <%=item.meeting_place%></h5>
        <hr>
        <h4 class="item-price">Price: <span>$<%=item.price%></span></h5>
        <hr>
        <p class="item-description"><%= item.description %></p>
      </div>

    <div class="container">
      <div class="col-md-12">
        <h2>Message</h2>
        <textarea placeholder="Enter your message for seller"></textarea>
      </div>
      
      <div class="container">
        <button type ="button" class="btn btn-success float-right">Send Message</button>
      </div>
      </div>
    </div>
  </div>
<% } %>


