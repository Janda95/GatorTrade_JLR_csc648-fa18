<!--TESTING New home page-->
<div class="jumbotron">
  <div class="container">
      <h1 class="display-3">
      Team 04 <br />
      Searching: <%= current_category %></h1>
      <p hidden id="current_category"><%= current_category %></p>
      <p hidden id="current_search"><%= current_search %></p>
    </div>
  </div>

<div class = "">Displaying <%=items.length%> of <%=items.length%></div>

  <!-- Show Items & Side Price/Location-->
<div class="wrapper">
  <nav class="background-color #9575cd" style="background-color:#9575cd" id="sidebar">
    <div class="container-fluid">
    <div class="sidebar-header">
      <h3><br>Search Filters</h3>
    </div>
    <form>
        <div class="form-group">
          <label for="sortPrice" style="color:black" class="bmd-label-floating">Sort By Price:</label>
          <select class="form-control" id="sortPrice">
            <option>- select price -</option>
            <option>less than $25</option>
            <option>$25 to $50</option>
            <option>$50 to $100</option>
            <option>$100 & up</option>
          </select>
        </div>
        <br>
        <div class="form-group">
            <label for="meetLocation" style="color:black" class="bmd-label-floating">Meet Location:</label>
            <select class="form-control" id="meetLocation">
              <option>- select location -</option>
              <option>Cesar Chavez Student Center</option>
              <option>J. Paul Leonard Library - Peets Coffee</option>
              <option>J. Paul Leonard Library - Reasearch Commons</option>
              <option>Student Services Building</option>
              <option>Mashouf Wellness Center</option>
            </select>
          </div>
      </form>
      </div>
  </nav>

  <div class="content">
    <div class="container-fluid">
      <div class="row row-offcanvas row-offcanvas-right">
        <%if( typeof items != "undefined") { %>
          <% items.forEach(( item ) => {%>
            <div class="col-lg-4 col-md-6 col-sm-12">
              <div class="card rounded" style="width: 100%;">
                <a href="/post/<%= item.item_id %>" class="btn">
                  <img class="card-img-top" src="<%= item.image_link %>" height="250px" alt="Card image cap">
                  <div class="overlay rounded">
                    <br>
                    <br>
                    <br>
                    <br>
                    <p class="postcard-text"><%= item.description %></p>
                  </div>
                </a>

                <!--Item Title and Price display below picture-->
                <div class="col-lg-12">
                    <p ><%= item.title %></p>
                      <p >$<%= item.price %></p>

                 </div>
               </div>
              </div>
            <%});%>
          <%}%>
      </div>
    </div>
  </div>


 
  <script>
    // Set Selected Attribute for drop down, for easier searching
    function setSelectedCategory() {
      var selectedCategory = document.getElementById("current_category").innerHTML;
      document.getElementById(selectedCategory).setAttribute('selected', 'selected');
    }
    // Set search input, so last search is remembered
    function setSearchInput() {
      var searchInput = document.getElementById("current_search").innerHTML;
      document.getElementsByName("searchInput")[0].value = searchInput;
    }
    setSelectedCategory();
    setSearchInput();
  </script>