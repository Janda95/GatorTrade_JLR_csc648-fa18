          <div class="card-body">
            <button class="btn btn-primary text-primary" style="padding: 0px; border: none; background: white;" name="categories" value="Books" type="submit">
              <h4 class="card-title">Books</h4>
            </button>
            <p class="card-text">Find books for your current classes.</p>
          </div>
        </div>
      </div>
      <!-- Electronics Card -->
      <div class="col-lg-4 col-sm-6 portfolio-item" style="margin-bottom: 10px;">
        <div class="card h-100">  
          <div class="card-body">
            <button class="btn btn-primary text-primary" style="padding: 0px; border: none; background: white;" name="categories" value="Electronics" type="submit">
              <h4 class="card-title">Electronics</h4>
            </button>
            <p class="card-text">Computers, Tablets, Calculators, Etc.</p>
          </div>
        </div>
      </div>
      <!-- Events Card -->
      <div class="col-lg-4 col-sm-6 portfolio-item" style="margin-bottom: 10px;">
        <div class="card h-100">
          <div class="card-body">
            <button class="btn btn-primary text-primary" style="padding: 0px; border: none; background: white;" name="categories" value="Events" type="submit">
              <h4 class="card-title">Events</h4>
            </button>
            <p class="card-text">Concert Tickets, Sporting Events, Etc.</p>
          </div>
        </div>
      </div>
      <!-- Home Goods Card -->
      <div class="col-lg-4 col-sm-6 portfolio-item" style="margin-bottom: 10px;">
        <div class="card h-100">
          <div class="card-body">
            <button class="btn btn-primary text-primary" style="padding: 0px; border: none; background: white;" name="categories" value="Home Goods" type="submit">
              <h4 class="card-title">Home Goods</h4>
            </button>
            <p class="card-text">Pots, Pans, Microwaves, Vacuums, Etc.</p>
          </div>
        </div>
      </div>
